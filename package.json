{
  "name": "node-tray",
  "version": "1.0.0",
  "main": "./dist/tray.cjs",
  "types": "./dist/tray.d.ts",
  "type": "module",
  "gypfile": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "node-gyp rebuild",
    "build": "rimraf dist && tsc -p tsconfig.prod.json && esbuild ./src/tray.ts --bundle --platform=node --target=node20 --outfile=dist/tray.cjs",
    "install": "node-gyp rebuild",
    "lint": "eslint .",
    "start": "tsx ./example",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@types/bindings": "^1.5.5",
    "@types/node": "20.14.9",
    "@typescript-eslint/eslint-plugin": "7.14.1",
    "@typescript-eslint/parser": "7.14.1",
    "bindings": "^1.5.0",
    "esbuild": "^0.24.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "file-type": "^19.5.0",
    "node-addon-api": "^8.1.0",
    "prettier": "3.3.2",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "5.6.2",
    "vitest": "^2.1.2"
  }
}
