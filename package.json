{
  "name": "node-tray",
  "version": "1.0.3",
  "main": "./dist/tray.cjs",
  "type": "module",
  "gypfile": true,
  "description": "Another library for rendering a tray icon on Windows.",
  "homepage": "https://github.com/s-h-a-d-o-w/node-tray.git",
  "author": "Andreas Opferkuch <andreas.opferkuch@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && pnpm build:declaration && pnpm build:bundle",
    "build:bundle": "esbuild ./src/tray.ts --bundle --platform=node --target=node20 --outfile=dist/tray.cjs",
    "build:declaration": "tsc -p tsconfig.prod.json && rename dist\\tray.d.ts tray.d.cts",
    "dev": "node-gyp rebuild",
    "lint": "eslint .",
    "prepack": "pnpm build",
    "start": "tsx ./example",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "files": [
    "dist",
    "binding.gyp",
    "src/tray.cpp",
    "src/tray.h"
  ],
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^8.1.0",
    "node-gyp": "^10.2.0"
  },
  "devDependencies": {
    "@types/bindings": "^1.5.5",
    "@types/node": "20.14.9",
    "@typescript-eslint/eslint-plugin": "7.14.1",
    "@typescript-eslint/parser": "7.14.1",
    "esbuild": "^0.24.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "file-type": "^19.5.0",
    "prettier": "3.3.2",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "5.6.2",
    "vitest": "^2.1.2"
  },
  "keywords": ["tray", "tray icon", "napi", "native addon"]
}
